            // 改
            // 注意: 
            //      1. 同样先查
            T_Students s4 = new T_Students(){Id = 2, Name = "Ef更改内容"};
            var s5 = from s in context.T_Students
                     where s.Id == s4.Id
                     select s;
            T_Students s6 = s5.FirstOrDefault();
            s6.Name = s4.Name;
            context.SaveChanges();


