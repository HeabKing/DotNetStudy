@model N29MVC.Models.User
@*为动态类型Model指定类型, 使其成为强类型*@
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Modify</title>
</head>
<body>
    <div>
        <form action="/user/Modify" method="post">
            <input type="hidden" name="uId" value="@Model.uId"/>
            <table border="1">
                <tr>
                    <td>姓名: </td>
