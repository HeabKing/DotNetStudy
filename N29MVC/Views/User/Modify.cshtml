                </tr>
                <tr>
                    <td>软删除: </td>
                    <td>
                        @*传统方法生成下拉列表*@
                        @*<select>
                                @foreach (string item in ViewBag.IsDelList as List<string>)
                                {
                                    if (item == Model.uIsDel.ToString())
                                    {
                                        <option selected value="@item">@item</option>
                                    }
                                    else
                                    {
                                        <option value="@item">@item</option>
                                    }
                                }
                            </select>*@
                        @*利用HtmlHelper生成下拉列表*@
                        @Html.DropDownList("uIsDel", ViewBag.IsDelList as IEnumerable<SelectListItem>)
                        @*// 下拉列表的名字不能随便起, 还要自动装载呢*@
                    </td>
                </tr>
            </table>
            <input type="submit" value="Edit"/>
        </form>
    </div>
</body>
</html>
