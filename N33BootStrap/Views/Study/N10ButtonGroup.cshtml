@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>N10ButtonGroup</title>
    <script src="~/Scripts/jquery-2.1.1.min.js"></script>
    <script src="~/Scripts/bootstrap-3.3.4-dist/js/bootstrap.min.js"></script>
    <link href="~/Scripts/bootstrap-3.3.4-dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <div class="btn-toolbar">
            @*水平*@
            <div class="btn-group">
                <button class="btn btn-default" type="button"><span class="glyphicon glyphicon-align-left"></span></button>
                <button class="btn btn-default" type="button"><span class="glyphicon glyphicon-align-center"></span></button>
                <button class="btn btn-default" type="button"><span class="glyphicon glyphicon-align-right"></span></button>
            </div>
            @*垂直*@
            <div class="btn-group-vertical">
                <button class="btn btn-default" type="button"><span class="glyphicon glyphicon-align-left"></span></button>
                <button class="btn btn-default" type="button"><span class="glyphicon glyphicon-align-center"></span></button>
                <div class="dropdown">
                    @*pull-right 按钮向右 下拉菜单不覆盖按钮*@
                    <button class="btn btn-default dropdown-toggle pull-right" type="button" data-toggle="dropdown">
                        @*pull-right 按钮向右 下拉菜单覆盖按钮*@
                        下拉菜单
                        <span class="caret"></span> @*小箭头*@
                    </button>
                    <ul class="dropdown-menu dropdown-menu" role="menu" aria-labelledby="dropdownMenu1">
                        @*dropdown-menu-right 下拉菜单向右*@
                        <li role="presentation" class="dropdown-header">小写</li>
                        <li class="disabled"><a href="#" role="menuitem">1</a></li> @*class="disabled" 禁用*@
                        <li><a href="#" role="menuitem">2</a></li>
                        <li role="presentation" class="divider"></li> @*分割线*@
                        <li role="presentation" class="dropdown-header">大写</li>
                        <li><a href="#" role="menuitem">一</a></li>
                        <li><a href="#" role="menuitem">二</a></li>
                    </ul>
                </div>
            </div>
            @*充满一行*@
            <div class="btn-group btn-group-justified">
                <div class="btn-group">
                    <button type="button" class="btn btn-default">Left</button>
                </div>
                <div class="btn-group">
                    <button type="button" class="btn btn-default">Middle</button>
                </div>
                <div class="btn-group">
                    <button type="button" class="btn btn-default">Right</button>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
