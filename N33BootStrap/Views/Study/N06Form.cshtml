@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>N02Form</title>
    <link href="~/Scripts/bootstrap-3.3.4-dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <form role="form" class="form-inline">
        @*class="form-inline"把表单(100%宽度)改成了内联表单(自适应)*@
        <div class="form-group">
            <label class="sr-only">日期: </label> @*class="sr-only"隐藏了label*@
            <input type="date" class="form-control" placeholder="user" />
            <label>Email: </label>
            <input type="email" class="form-control" placeholder="Enter Email" />
            <label>密码: </label>
            <input type="password" class="form-control" placeholder="Enter Password" />
            <label>选择文件: </label>
            <input type="file" />
            <p class="help-block">选择你的文件</p>
        </div>
    </form>
    <hr />
    <form role="form" class="form-horizontal">
        <div class="form-group">
            <label class="col-sm-2 control-label">Email</label>
            <div class="col-sm-10">
                <input type="email" placeholder="Email" />
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">Password</label>
            <div class="col-sm-10">
                <input type="password" class="form-control" placeholder="Password"/> @*class="form-control"圆角美化*@
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-10 col-sm-offset-2">
                <div class="checkbox">
                    <label>
                        <input type="checkbox"/>记住密码
                    </label>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default">登陆</button>
            </div>
        </div>
    </form>
</body>
</html>
