@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>N05Table</title>
    <link href="~/Scripts/bootstrap-3.3.4-dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
<div class="table-responsive">@*table-responsive响应式表格: 可缩放直至添加滚动条*@
    <h2 class="text-center">基本表格</h2>
    <table class="table">
        <thead>
        <tr>
            <th>标题</th>
            <th>标题</th>
            <th>标题</th>
        </tr>
        </thead>
        <tbody>
        <tr>
            <td>单元格</td>
            <td>单元格</td>
            <td>单元格</td>
        </tr>
        <tr>
            <td>单元格</td>
            <td>单元格</td>
            <td>单元格</td>
        </tr>
        </tbody>
    </table>
    <hr/>
    <h2 class="text-center">斑马线表格</h2>
    <div class="container">
        <table class="table table-striped">
            <thead>
            <tr>
                <th>标题</th>
                <th>标题</th>
                <th>标题</th>
            </tr>
            </thead>
            <tbody>
            <tr>
                <td>单元格</td>
                <td>单元格</td>
                <td>单元格</td>
            </tr>
            <tr>
                <td>单元格</td>
                <td>单元格</td>
                <td>单元格</td>
            </tr>
            </tbody>
        </table>
    </div>
    <hr/>
    <h2 class="text-center">斑马线 边框 表格</h2>
    <table class="table table-striped table-bordered">
        <thead>
        <tr>
            <th>标题</th>
            <th>标题</th>
            <th>标题</th>
        </tr>
        </thead>
        <tbody>
        <tr>
            <td>单元格</td>
            <td>单元格</td>
            <td>单元格</td>
        </tr>
        <tr>
            <td>单元格</td>
            <td>单元格</td>
            <td>单元格</td>
        </tr>
        </tbody>
    </table>
    <hr/>
    <h2 class="text-center">鼠标经过 斑马线 边框 表格</h2>
    <table class="table table-striped table-bordered table-hover">
        <thead>
        <tr class="active">
            <th>标题</th>
            <th>标题</th>
            <th>标题</th>
        </tr>
        </thead>
        <tbody>
        <tr class="success">
            <td>单元格</td>
            <td>单元格</td>
            <td>单元格</td>
        </tr>
        <tr class="info">
            <td>单元格</td>
            <td>单元格</td>
            <td>单元格</td>
        </tr>
        <tr class="warning">
            <td>单元格</td>
            <td>单元格</td>
            <td>单元格</td>
        </tr>
        <tr class="danger">
            <td>单元格</td>
            <td>单元格</td>
            <td>单元格</td>
        </tr>
        </tbody>
    </table>
    <hr/>
    <h2 class="text-center">紧凑型表格</h2>
    <table class="table table-condensed">
        <thead>
        <tr>
            <th>标题</th>
            <th>标题</th>
            <th>标题</th>
        </tr>
        </thead>
        <tbody>
        <tr>
            <td>单元格</td>
            <td>单元格</td>
            <td>单元格</td>
        </tr>
        <tr>
            <td>单元格</td>
            <td>单元格</td>
            <td>单元格</td>
        </tr>
        </tbody>
    </table>
</div>
</body>
</html>
